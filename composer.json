{
	"name": "icanboogie/operation",
	"type": "library",
	"description": "Feature rich controllers dedicated to a single task",
	"keywords": [ "operation", "dispatch", "controller" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/Operation/issues",
		"source": "https://github.com/ICanBoogie/Operation"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=5.6",
		"icanboogie/errors": "^2.0",
		"icanboogie/bind-routing": "^4.0"
	},
	"require-dev": {
        "icanboogie/icanboogie": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\": "lib",
			"ICanBoogie\\Operation\\": "lib/Operation"
		}
	},
	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	},

	"extra": {
		"icanboogie": {
			"config-path": "config"
		}
	}
}
